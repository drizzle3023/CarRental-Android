<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="242dp
"
            android:layout_marginBottom="0dp"
            android:background="@color/colorOnboardingBackcolor"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:id="@+id/button_back"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="16dp"
                android:text="Payment"
                android:textColor="@color/colorCoverageTitle"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textSize="17sp"/>


            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="17dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back" />

    </FrameLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="63dp"
        android:background="@drawable/coverage_radius_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:text="Total Price"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#742BB6"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textview_price_per_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:text="47.99 € / per year"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="17dp"
                android:src="@drawable/check_item" />

            <TextView
                android:id="@+id/textview_rental_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="Unlimited rentals"
                android:textColor="@color/colorSubscriptionContent"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="17dp"
                android:src="@drawable/check_item" />

            <TextView
                android:id="@+id/textview_vehicle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="Vehicle - Car"
                android:textColor="@color/colorSubscriptionContent"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="17dp"
                android:src="@drawable/check_item" />

            <TextView
                android:id="@+id/textview_worldzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/sf_pro_display_regular"
                android:text="World zone - United States"
                android:textColor="@color/colorSubscriptionContent"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_expire_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="World zone - United States"
            android:textColor="@color/colorSubscriptionContent"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_pay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/gradient_button"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Pay 47.99 €"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="17sp" />

</FrameLayout>
