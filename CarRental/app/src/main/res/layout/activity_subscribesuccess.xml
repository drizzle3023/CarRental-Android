<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <ImageButton
            android:id="@+id/button_back_to_onboarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/subscriptionActivityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:layout_gravity="center"
            android:text="Payment"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/button_back_to_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="46dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:cropToPadding="false"
        android:fadeScrollbars="false"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/payment_success"/>

    <TextView
        android:id="@+id/subscriptionNewDescriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:text="Thank you for subscribing!"
        android:textAllCaps="false"
        android:textColor="@color/colorNormalText"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/subscriptionNewDescription3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="49dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="Now you are able to add multiple rental \n coverages."
        android:textAlignment="center"
        android:textColor="@color/colorSubscriptionContent"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>

    <Button
        android:id="@+id/button_subscribe"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/gradient_button"
        android:text="Got it"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="17sp" />
</LinearLayout>
