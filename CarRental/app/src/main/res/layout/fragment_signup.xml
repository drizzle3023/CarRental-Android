<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:hint="Name"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:hint="Email"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/sf_pro_text_regular"
        android:text="Enter your phone number to receive a  validation code"
        android:textColor="@color/colorNormalText"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <EditText
            android:id="@+id/text_country_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:editable="false"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:gravity="center"
            android:text="+000"
            android:textColor="@color/colorNormalBlue"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="phone" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/agree_term_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="39dp"
        android:button="@null"
        android:checked="false"
        android:drawableLeft="@drawable/checkbox_selector"
        android:drawablePadding="10dp"
        android:text="I agreed to the Terms of Service" />

    <Button
        android:id="@+id/createaccount_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/inactive_button"
        android:fontFamily="@font/sf_pro_display_regular"
        android:text="Create account"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
