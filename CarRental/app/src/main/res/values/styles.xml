<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>

    </style>


    <style name="AppTheme.RadioButton">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorSubscriptionWhatYouGet</item>

    </style>

    <style name="AppTheme.SubtitleTextView">

        <item name="android:textColor">@color/colorNormalBlue</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>

    </style>

    <style name="AppTheme.StartCoverageButtonLabel">

        <item name="android:textColor">@color/colorNormalBlue</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>


    <style name="AppTheme.ProfileTipLabel">

        <item name="android:textColor">@color/colorNormalBlue</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>

    </style>

    <style name="AppTheme.DescriptionTextView">

        <item name="android:textColor">@color/colorDescriptionTextView</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>


    <style name="AppTheme.ProfileButton">

        <item name="android:textColor">@color/colorProfileButton</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>

    <style name="AppTheme.ProfileItem">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>


    <style name="AppTheme.ProfileCategoryCaption">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>

    </style>


    <style name="AppTheme.HistoryRowItemTitle">

        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>

    <style name="AppTheme.HistoryRowItemState">

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>

    <style name="AppTheme.HistoryRowItemDisabled">

        <item name="android:textColor">@color/colorPlaceHolder</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>

    <style name="AppTheme.HistoryRowItemEnabled">

        <item name="android:textColor">@color/colorNormalBlue</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>

    </style>



</resources>
